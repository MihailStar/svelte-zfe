{
  "extends": ["stylelint-config-sass-guidelines", "stylelint-config-prettier"],
  "rules": {
    "color-hex-length": "long",
    "declaration-property-value-disallowed-list": {
      "/^border/": ["none"],
      "/^outline/": ["none"]
    },
    "max-nesting-depth": 3,
    "scss/percent-placeholder-pattern": "^[a-z]+(?:[0-9a-z-_]+[0-9a-z]+)?$",
    "selector-class-pattern": "^[a-z]+(?:[0-9a-z-_]+[0-9a-z]+)?$"
  }
}
